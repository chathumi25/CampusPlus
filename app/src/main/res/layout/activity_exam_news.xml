<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0D1C20">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#4A6D75"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/backicon"
            android:contentDescription="Back"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CampusPlus"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon"
            android:contentDescription="Profile"/>
    </LinearLayout>

    <!-- News Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exame News"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="12dp"
        android:textColor="#ffffff"/>

    <!-- Image Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="News Image"
                android:scaleType="centerCrop"
                android:src="@drawable/exams" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#456F84"
                android:text="FSemester 2 Final Exam Timetable Released\nApril.30.2024\nTheFinal exams will start on May 10 and end on May 24. "
                android:textColor="#ffffff"
                android:padding="10dp"
                android:textSize="14sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- News Body -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#456F84"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date: April 29, 2025"
                android:textColor="#fff"
                android:paddingBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Author: Campus Sports Club"
                android:textColor="#fff"
                android:paddingBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="
Date: April 29, 2025
â€¨Author: Campus Administration Office

The final examination timetable for Semester 2 has been officially released today. The schedule is now available on the university portal for all undergraduate and postgraduate programs. Students are advised to review their exam dates carefully and make necessary preparations."
                android:textColor="#fff"
                android:textSize="15sp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Interaction -->

</LinearLayout>
