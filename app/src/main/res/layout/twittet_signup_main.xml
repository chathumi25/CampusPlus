<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B2B34"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"
                android:contentDescription="Back"
                android:src="@drawable/backicon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/facebook_login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:text="Rgister with Twitter"
            android:textColor="#CFE8F2"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <!-- Username Field -->
        <!-- User Name / Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="#37444B"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profile" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="User Name / Email"
                android:textColor="#FFFFFF"
                android:textColorHint="#B0BEC5"
                android:paddingStart="12dp"
                android:inputType="textEmailAddress" />
        </LinearLayout>


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Required"
            android:textColor="#B0BEC5"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="left"/>
        <!-- Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#37444B"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/lock" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Password"
                android:textColor="#FFFFFF"
                android:textColorHint="#B0BEC5"
                android:paddingStart="12dp"
                android:inputType="textPassword"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Required"
            android:layout_gravity="left"
            android:textColor="#B0BEC5"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"/>

        <!-- Confirm Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#37444B"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/lock" />

            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Confirm Password"
                android:textColor="#FFFFFF"
                android:textColorHint="#B0BEC5"
                android:paddingStart="12dp"
                android:inputType="textPassword"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Required"
            android:layout_gravity="left"
            android:textColor="#B0BEC5"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"/>

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#37444B"
            android:padding="4dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/email" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Email"
                android:textColor="#FFFFFF"
                android:textColorHint="#B0BEC5"
                android:paddingStart="12dp"
                android:inputType="textEmailAddress"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Required"
            android:layout_gravity="left"
            android:textColor="#B0BEC5"
            android:textSize="12sp"
            android:layout_marginBottom="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#37444B"
            android:padding="4dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/edit_statement"
                android:hint="Statement"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"

                android:textColor="#FFFFFF"
                android:textColorHint="#B0BEC5"
                android:paddingStart="12dp"
                android:inputType="text"/>
        </LinearLayout>


        <!-- Checkboxes -->

        <!-- Signup Button -->
        <!-- Social Media Icons -->
        <CheckBox
            android:id="@+id/cb_save_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:checked="true"
            android:text="Save Data"
            android:textColor="#FFFFFF" />




        <!-- Login Button -->
        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="#5CA6B2"
            android:text="SignUp"
            android:textColor="#091215"
            android:layout_marginBottom="16dp"/>

        <!-- Sign Up Link -->
        <TextView
            android:id="@+id/logintext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have account ? login"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:autoLink="all"
            android:layout_gravity="center_horizontal" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminate="true"
            style="?android:attr/progressBarStyleLarge" />




    </LinearLayout>
</ScrollView>
