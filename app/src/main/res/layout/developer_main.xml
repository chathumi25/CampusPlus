<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D2C2F"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"
                android:contentDescription="Back"
                android:src="@drawable/backicon" />
        </RelativeLayout>



        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developer Info"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />


        <ImageView
            android:id="@+id/dev_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/devdp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:background="@drawable/devdp" />

        <TextView
            android:id="@+id/dev_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chathumi Rathnayaka"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/dev_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="chathumi.rathnayaka@gmail.com"
            android:textColor="#B0BEC5"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#37474F"
            android:layout_marginBottom="24dp"/>

        <!-- Student Index 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Index"
            android:textColor="#4FC3F7"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R.M.C.N Rathnayaka"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <!-- Student Index 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Index"
            android:textColor="#4FC3F7"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022t01571"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <!-- Personal Statement -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Statement"
            android:textColor="#4FC3F7"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Undergraduate"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <!-- Version -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version"
            android:textColor="#4FC3F7"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.0.0.1"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="32dp"/>

        <!-- Exit Button -->
        <Button
            android:id="@+id/exit_button"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:text="Exit"
            android:textColor="#FFFFFF"
            android:backgroundTint="#789CA6"
            android:layout_marginBottom="32dp"/>

    </LinearLayout>
</ScrollView>
