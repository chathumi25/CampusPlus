<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222B31">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tv_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="Register"
            android:textColor="#CFE8F2"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- User Name / Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="#37444B"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profile" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="User Name / Email"
                android:textColor="#FFFFFF"
                android:textColorHint="#B0BEC5"
                android:paddingStart="12dp"
                android:inputType="textEmailAddress" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Required"
            android:textColor="#B0BEC5"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"/>

        <!-- Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#37444B"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/lock" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Password"
                android:textColor="#FFFFFF"
                android:textColorHint="#B0BEC5"
                android:paddingStart="12dp"
                android:inputType="textPassword"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Required"
            android:textColor="#B0BEC5"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"/>

        <!-- Confirm Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#37444B"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/lock" />

            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Confirm Password"
                android:textColor="#FFFFFF"
                android:textColorHint="#B0BEC5"
                android:paddingStart="12dp"
                android:inputType="textPassword"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Required"
            android:textColor="#B0BEC5"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"/>

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#37444B"
            android:padding="4dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/email" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Email"
                android:textColor="#FFFFFF"
                android:textColorHint="#B0BEC5"
                android:paddingStart="12dp"
                android:inputType="textEmailAddress"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Required"
            android:textColor="#B0BEC5"
            android:textSize="12sp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#37444B"
            android:padding="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/edit_statement"
                android:hint="Statement"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"

                android:textColor="#FFFFFF"
                android:textColorHint="#B0BEC5"
                android:paddingStart="12dp"
                android:inputType="text"/>
        </LinearLayout>

        <!-- Checkboxes -->

        <!-- Signup Button -->
        <!-- Social Media Icons -->
        <CheckBox
            android:id="@+id/cb_save_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:checked="true"
            android:text="Save Data"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="14dp"
            android:background="#5CA6B2"
            android:text="SignUp"
            android:textColor="#091215" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/facebook"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/facebook" />

            <ImageView
                android:id="@+id/twitter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/twitter" />

            <ImageView
                android:id="@+id/google"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/google" />

            <ImageView
                android:id="@+id/apple"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/apple" />
        </LinearLayout>


        <!-- Already have account -->
        <TextView
            android:id="@+id/tv_already_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I have already account"
            android:textColor="#B0BEC5"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>
</ScrollView>
