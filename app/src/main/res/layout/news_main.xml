<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#344E5D">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#4A6D75"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/menu1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="CampusPlus"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/profile_icon" android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon"/>
    </LinearLayout>

    <!-- Search Bar -->
    <androidx.cardview.widget.CardView
        android:layout_width="392dp"
        android:layout_height="50dp"
        android:layout_margin="12dp"
        android:background="#1A2D36"
        app:cardCornerRadius="25dp">

        <EditText
            android:id="@+id/searchBar"
            android:layout_width="384dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:hint="Search"
            android:padding="10dp"
            android:textColor="#ABAAAA"
            android:textColorHint="#cccccc" />
    </androidx.cardview.widget.CardView>

    <!-- News Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="News"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#ffffff"
        android:padding="10dp"/>

    <!-- Scrollable News Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="491dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Card 1: Sports -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/white"
                    android:elevation="4dp"
                    android:orientation="horizontal"
                    android:padding="12dp">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/newsImage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sports" />

                        <TextView

                            android:id="@+id/sports_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="#062D3E"
                            android:padding="0dp"
                            android:text="Faculty football tournament finals held today."
                            android:textSize="15dp"
                            android:textColor="#D7DFE0" />
                    </FrameLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 2: Exams -->
            <!-- Card 1: Sports -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/white"
                    android:elevation="4dp"
                    android:orientation="horizontal"
                    android:padding="12dp">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/newseImage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/exams" />

                        <TextView

                            android:id="@+id/exam_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="#062D3E"
                            android:padding="0dp"
                            android:text="Semester 2 Final Exam Timetable Released"
                            android:textSize="15dp"
                            android:textColor="#D7DFE0" />
                    </FrameLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>




            <!-- Card 3: Academic -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/white"
                    android:elevation="4dp"
                    android:orientation="horizontal"
                    android:padding="12dp">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/newsfImage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/academicsnew" />

                        <TextView

                            android:id="@+id/academic_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="#062D3E"
                            android:padding="0dp"
                            android:text="New Dean Appointed for Faculty of Technology"
                            android:textSize="15dp"
                            android:textColor="#D7DFE0" />
                    </FrameLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewNews"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="#1A2D36"
        app:itemIconTint="@color/nav_icon_color"
        app:itemTextColor="@color/nav_text_color"
        app:menu="@menu/bottom_nav_menu" />


</LinearLayout>
